extends layout

block content
  div(class="container mt-3")
    h2(class="text-center") Alumnos

    h2(class="mt-4") Agregar Nuevo Alumno
    form(action="/alumnos" method="POST")
      div(class="form-group")
        label(for="nombre") Nombre:
        input(type="text" class="form-control" name="nombre" required)
      div(class="form-group")
        label(for="edad") Edad:
        input(type="number" class="form-control" name="edad" required)
      div(class="form-group")
        label(for="carrera") Carrera:
        input(type="text" class="form-control" name="carrera" required)
      button(type="submit" class="btn btn-primary mt-2") Agregar

    br

    table(class="table table-striped mt-4")
      thead(class="thead-dark")
        tr
          th Nombre
          th Edad
          th Carrera
          th Acciones

      tbody
        each alumno in alumnos
          tr
            td= alumno.nombre
            td= alumno.edad
            td= alumno.carrera
            td
              a(href=`/alumnos/editar/${alumno.id}`, class="btn btn-info editar-enlace") Editar
              | &nbsp;
              a(href=`/alumnos/eliminar/${alumno.id}`, class="btn btn-danger eliminar-enlace") Eliminar
